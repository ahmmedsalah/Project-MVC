@model IEnumerable<DepartmentViewModel>;
@{
	ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>
@if (Model.Count() > 0)
{
	<table class="mt-3 table table-striped table-hover">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(D=>D.Code)</th>
				<th>@Html.DisplayNameFor(D=>D.Name)</th>
				<th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
				<th>Details</th>
				<th>Updates</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var department in Model)
			{
				<tr class="border">
					<td>@department.Code</td>
					<td>@department.Name</td>
					<td>@department.DateOfCreation</td>
					@* <partial name="_ButtonsPartialView" model="@department.Id"/> *@
					<td>
						<a asp-action="Detials" asp-route-id="@department.Id.ToString()" class="btn btn-warning">
							<i class="fas fa-eye"></i> Detials
						</a>
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@department.Id.ToString()" class="btn btn-success">
							<i class="fas fa-edit"></i> Update
						</a>
					</td>
					<td>
						<a asp-action="Delete" asp-route-id="@department.Id.ToString()" class="btn btn-danger">
							<i class="fas fa-trash"></i> Delete

						</a>
					</td>
				</tr>

			}



		</tbody>
	</table>
}
else
{
	<div class="mt-5 alert alert-warning">
		<h3>There is No Department </h3>

		</div>
	}

						 