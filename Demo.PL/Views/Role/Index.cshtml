@model IEnumerable< IdentityRole>

@{
	ViewData["Title"] = "Index";
}

<h1>All Role</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary" >Create New Role</a>
<br />
<br />
<br />
<form asp-action="Index" class="mb-4">
	<div class="row align-items-center  justify-content-center ">
		<div class="col-8">
			<input type="text" placeholder="Search By Name" class="form-control" name="SearchValue" />
		</div>
		<div class="col-4">
			<input type="submit" value="Search " class="btn btn-success" />
		</div>
	</div>
</form>


@* <div class=" alert alert-success">
@ViewData["message"]
</div> *@

@* <div class=" alert alert-success">
    @ViewBag.hamada
</div> *@
@if (TempData["message"] != null)
{
	<div class=" alert alert-success">
		@TempData["message"]
	</div>
}


@if (Model.Count() > 0)
{
	<table class="mt-3 table table-striped table-hover">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(R=>R.Id)</th>
				<th>@Html.DisplayNameFor(R=>R.Name)</th>
				<th>Detials</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var role in Model)
			{
				<tr>
					<td>@Html.DisplayFor(M=>role.Id)</td>
					<td>@Html.DisplayFor(M=>role.Name)</td>

					<td>
						<a asp-action="Detials" asp-route-id="@role.Id.ToString()" class="btn btn-warning">
							<i class="fas fa-eye"></i> Detials
						</a>
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@role.Id.ToString()" class="btn btn-success">
							<i class="fas fa-edit"></i> Update
						</a>
					</td>
					<td>
						<a asp-action="Delete" asp-route-id="@role.Id.ToString()" class="btn btn-danger">
							<i class="fas fa-trash"></i> Delete

						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

}
else
{
	<div class="mt-5 alert alert-warning">
		<h3>There is No Role</h3>
	</div>
}
