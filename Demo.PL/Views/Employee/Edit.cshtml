@model EmployeeViewModel


@{
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}

<h1>Update Employee</h1>
<form asp-action="Edit" enctype="multipart/form-data">
    
	<input hidden asp-for="Id" />

    <div class="form-group form-check  " style="margin-left:-15px">
        <label class="col-form-label" asp-for="ImageName" style="display:block"></label>
        <img src="~/files/images/@Html.DisplayFor(M=>Model.ImageName)" class="img-circle " style="border-radius: 50%; height: 100px; width: 100px; margin-top:10px" alt="Employee Image" />
        <input class="form-control"style="margin-top:10px" asp-for="Image" />

    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="IsActive"></label>
        <input class="form-control" asp-for="IsActive" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input class="form-control" asp-for="HireDate" />
    </div>
  <div class="form-group">
        <label  asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" class="form-control" asp-items="Departments">
            <option value="@null">--Select Department--</option>
        </select>
    </div>

	
	<input type="submit" value="Save" class="btn btn-primary" />|
	<a asp-action="Index" class="btn btn-light">Back to list </a>

</form>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
    } 